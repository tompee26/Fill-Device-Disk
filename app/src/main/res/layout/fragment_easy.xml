<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label_free"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/ids_legend_free"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/colorLightDisabled"
            app:layout_constraintEnd_toStartOf="@id/label_fill"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_fill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ids_legend_fill"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/colorLightDisabled"
            app:layout_constraintEnd_toStartOf="@id/label_speed"
            app:layout_constraintStart_toEndOf="@id/label_free"
            app:layout_constraintTop_toTopOf="@id/label_free" />

        <TextView
            android:id="@+id/label_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ids_legend_speed"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/colorLightDisabled"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/label_fill"
            app:layout_constraintTop_toTopOf="@id/label_free" />

        <TextView
            android:id="@+id/free"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@{viewModel.freeSize}"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/colorLight"
            app:layout_constraintEnd_toStartOf="@id/fill"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_free"
            tools:text="111 GB" />

        <TextView
            android:id="@+id/fill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{viewModel.fillSize}"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/colorLight"
            app:layout_constraintEnd_toStartOf="@id/speed"
            app:layout_constraintStart_toEndOf="@id/free"
            app:layout_constraintTop_toTopOf="@id/free"
            tools:text="2 GB" />

        <TextView
            android:id="@+id/speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{viewModel.speed}"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/colorLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/fill"
            app:layout_constraintTop_toTopOf="@id/free"
            tools:text="0.0 MB/sec" />

        <TextView
            android:id="@+id/clear_fill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorButtonBackgroundAlpha"
            android:clickable="true"
            android:enabled="@{!viewModel.isFilling}"
            android:focusable="true"
            android:gravity="center"
            android:onClick="@{() -> viewModel.clearFill()}"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:text="@string/ids_lbl_clear"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/colorLightDisabled"
            app:drawableTopCompat="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bottom_separator"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/bottom_separator"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/clear_fill" />

        <TextView
            android:id="@+id/sdCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorButtonBackgroundAlpha"
            android:enabled="@{!viewModel.isFilling}"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:text="@string/ids_lbl_external_storage"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/colorLightDisabled"
            app:drawableTopCompat="@drawable/ic_sd_storage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bottom_separator" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/start"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="54dp"
            android:scaleType="centerCrop"
            app:borderWidth="0dp"
            app:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <at.grabner.circleprogress.CircleProgressView
            android:id="@+id/circle_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            app:cpv_autoTextSize="true"
            app:cpv_barColor="@color/colorAccent"
            app:cpv_barWidth="5dp"
            app:cpv_innerContourSize="0dp"
            app:cpv_maxValue="100"
            app:cpv_outerContourSize="0dp"
            app:cpv_rimColor="@color/colorPrimaryLight"
            app:cpv_rimWidth="5dp"
            app:cpv_showUnit="true"
            app:cpv_spinColor="@color/colorPrimary"
            app:cpv_textColor="@color/colorLight"
            app:cpv_textScale="1"
            app:cpv_unit="%"
            app:cpv_unitColor="@color/colorLight"
            app:cpv_unitPosition="right_top"
            app:cpv_unitScale="1"
            app:cpv_value="0"
            app:layout_constraintBottom_toTopOf="@+id/clear_fill"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fill" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="viewModel"
            type="com.tompee.utilities.filldevicespace.fill.easy.EasyFillViewModel" />
    </data>
</layout>
