<resources>

    <!-- Toolbar Style -->
    <style name="ToolBarStyle">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <!-- Toolbar title text style -->
    <style name="ToolbarTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingRight">@dimen/toolbar_right_padding</item>
        <item name="android:paddingTop">@dimen/toolbar_top_padding</item>
        <item name="android:paddingBottom">@dimen/toolbar_bottom_padding</item>
    </style>

    <!-- Toolbar title text style -->
    <style name="ToolbarTitleTextAppearance">
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabIndicatorColor">@color/colorLightSelected</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorLight</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="SpinnerItemDropDownStyle">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingLeft">@dimen/spinner_dropdown_padding</item>
        <item name="android:paddingRight">@dimen/spinner_dropdown_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
